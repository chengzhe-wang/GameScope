{% extends 'base.html.twig' %}

{% block title %}{{ game.name }}{% endblock %}

{% block body %}
    <h1>{{ game.name }}</h1>
    <p>{{ game.description_raw }}</p>
    <p>Released on: {{ game.released }}</p>
    <p>Genres: 
        {% for genre in game.genres %}
            {{ genre.name }}{% if not loop.last %}, {% endif %}
        {% endfor %}
    </p>
{% endblock %}
